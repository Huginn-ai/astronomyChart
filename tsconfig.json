{
  //"extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    // —— 与 bundler 模式配套 —— //
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "verbatimModuleSyntax": true,

    // —— 一般建议 —— //
    "allowJs": true,
    "checkJs": false,                   // 如果你希望校验 JS，可改为 true
    "resolveJsonModule": true,          // 允许导入 *.json（给 i18n 用）
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "noEmit": true
  }
}
